          <%= f.text_field :cuerpo, class: "col-md-12" %>
        </div>
      <br>
      </div>
      <div class="row">
        <div class="field">
          <%= f.label :autor %>:<br>
          <%= f.text_field :autor %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <%= f.submit "Agregar comentario" %>
        </div>
      </div><br>
    </div>    
